{
  "version": 2,
  "functions": {
    "api/**/*.php": {
      "runtime": "vercel-php@0.7.4",
      "includeFiles": "{app,system,writable,public,vendor}/**"
    }
  },
  "routes": [
    {
      "src": "/(css|js|images|favicon\\.ico|robots\\.txt)(.*)",
      "dest": "/public/$1$2"
    },
    { "src": "/(.*)", "dest": "/api/index.php" }
  ]
}
